import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

from services import FileResourceService
from services.ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  AddFileResponse addFile(AddFileRequest request)'
  print '  GetFileResponse getFile(GetFileRequest request)'
  print '  RemoveFileResponse removeFile(RemoveFileRequest request)'
  print '  MoveFileResponse moveFile(MoveFileRequest request)'
  print '  ListDirResponse listDir(ListDirRequest request)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = FileResourceService.Client(protocol)
transport.open()

if cmd == 'addFile':
  if len(args) != 1:
    print 'addFile requires 1 args'
    sys.exit(1)
  pp.pprint(client.addFile(eval(args[0]),))

elif cmd == 'getFile':
  if len(args) != 1:
    print 'getFile requires 1 args'
    sys.exit(1)
  pp.pprint(client.getFile(eval(args[0]),))

elif cmd == 'removeFile':
  if len(args) != 1:
    print 'removeFile requires 1 args'
    sys.exit(1)
  pp.pprint(client.removeFile(eval(args[0]),))

elif cmd == 'moveFile':
  if len(args) != 1:
    print 'moveFile requires 1 args'
    sys.exit(1)
  pp.pprint(client.moveFile(eval(args[0]),))

elif cmd == 'listDir':
  if len(args) != 1:
    print 'listDir requires 1 args'
    sys.exit(1)
  pp.pprint(client.listDir(eval(args[0]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
